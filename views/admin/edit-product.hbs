<section>
    <div class="container ">
        <div class="row">
           
            <form action="/admin/edit-product/{{product._id}}" method="POST" enctype="multipart/form-data">
                 <h2 class="text-center">Edit Product</h2>
                    <label for="">Name:</label>
                    <input type="text"  name="name" class="form-control" value="{{product.name}}">
               
                
                    <label for="category">Category:</label>
                    <input type="text" name="category" class="form-control" value="{{product.category}}">
                
              
                    <label for="">Price:</label>
                    <input type="number"  name="price" class="form-control" min="0" step="0.01" value="{{product.price}}">
               
                
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" class="form-control" rows="3" value="{{product.description}}"></textarea>
            
                
                    <label for="">Image:</label>
                    <img src="/images/{{product._id}}.jpg" alt="" style="width: 100px;height:auto">
                    <input type="file" name="image" class="form-control-file" accept="image/*" >
              
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</section>