<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-3">Add products</a>
            <a href="/admin/user-data" class="btn btn-success ml-auto mt-3">User data</a>
        </div>
        <table class="table mt-4" id="productsTable" >
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Catogary</th>
                    <th scope="col">Description</th>
                    
                    <th>image</th>
                    <th scope="col">option</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">*</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width:50px; height:50px"  src="/images/{{this._id}}.jpg" alt=""></td>
                    <td>                                            
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
                    </td>
                    

                </tr>
                {{/each}}
         
            </tbody>
        </table>
    </div>
</section> 


 <script>
  $(function(){
    $('#productsTable').DataTable({
        "dom": '<"top"i>rt<"bottom"flp><"clear">',
    });
  })
</script>